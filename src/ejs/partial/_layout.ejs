<%
var site = {
	name: 'template',
	domain: '//localhost:' + port + '/',
	description: 'defaultのdescription',
	keyword: 'defaultのkeyword',
	ogTitle: 'defaultのogTitle',
	ogType: 'defaultのogType',
	ogDescription: 'defaultのogDescription',
	ogURL: 'defaultのogURL',
	ogImage: 'defaultのogImage',
	ogSitename: 'defaultのogSitename',
	twitterCard: 'summary',
	twitterSite: 'defaultのtwitterSite',
};

// 個別ページで定義されていない場合はデフォルト値を設定する
site.title = page.title ? page.title + ' | ' + site.name : site.name;
site.description = page.description ? page.description : site.description;
site.keyword = page.keyword ? page.keyword : site.keyword;
site.ogTitle = page.ogTitle ? page.ogTitle : site.ogTitle;
site.ogType = page.ogType ? page.ogType : site.ogType;
site.ogDescription = page.ogDescription ? page.ogDescription : site.ogDescription;
site.ogURL = page.ogURL ? page.ogURL : site.ogURL;
site.ogImage = page.ogImage ? page.ogImage : site.ogImage;
site.ogSitename = page.ogSitename ? page.ogSitename : site.ogSitename;
site.twitterCard = page.twitterCard ? page.twitterCard : site.twitterCard;
site.twitterSite = page.twitterSite ? page.twitterSite : site.twitterSite;
-%>
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title><%= site.title %></title>
<meta name="description" content="<%= site.description %>">
<meta name="keyword" content="<%= site.keyword %>">
<meta name="viewport" content="width=device-width,initial-scale=1">
<%# SPリンク可否設定 -%>
<meta name="format-detection" content="telephone=no,address=no,email=no">
<%# open graph protocol -%>
<meta property="og:title" content="<%= site.ogTitle %>">
<meta property="og:type" content="<%= site.ogType %>">
<meta property="og:description" content="<%= site.ogDescription %>">
<meta property="og:url" content="<%= site.ogURL %>">
<meta property="og:image" content="<%= site.ogImage %>">
<meta property="og:site_name" content="<%= site.ogSitename %>">
<%# twitter card（要サイト登録）-%>
<meta name="twitter:card" content="<%= site.twitterCard %>">
<meta name="twitter:site" content="<%= site.twitterSite %>">
<%# apple-touch-icon -%>
<%# iPad 2 and iPad mini (@1x) -%>
<link rel="apple-touch-icon" sizes="76x76" href="<%= site.domain %>images/icon/76.png">
<%# iPhone 6 and iPhone 5 and iPhone 4s (@2x) -%>
<link rel="apple-touch-icon" sizes="120x120" href="<%= site.domain %>images/icon/120.png">
<%# iPad and iPad mini (@2x) -%>
<link rel="apple-touch-icon" sizes="152x152" href="<%= site.domain %>images/icon/152.png">
<%# iPhone 6 Plus (@3x) -%>
<link rel="apple-touch-icon" sizes="180x180" href="<%= site.domain %>images/icon/180.png">
<%# default -%>
<link rel="apple-touch-icon" href="<%= site.domain %>images/icon/default.png">
<link rel="shortcut icon" href="<%= site.domain %>images/icon/favicon.ico">
<link rel="stylesheet" href="<%= site.domain %>css/style.css">
</head>
<body>
<div class="wrapper">
<% include _header -%>
	<div class="container">
		<div class="contents">
<% content(site) -%>
		</div>
	</div>
<% include _footer -%>
</div>
<script src="<%= site.domain %>js/app.js"></script>
</body>
</html>
